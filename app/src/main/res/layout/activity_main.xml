<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF7DA"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.palakdhingra.agroinc.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Login / Sigup"
        android:textColor="@android:color/black"
        android:background="#FD8E09"
        android:padding="48dp"
        android:gravity="center"
        android:textAllCaps="true"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="agriculture info"
        android:background="#379237"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:padding="48dp"
        android:id="@+id/agriculture_text_view"
        android:gravity="center"
        android:textAllCaps="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:background="#16AFCA"
        android:id="@+id/setting_text_view"
        android:text="setting"
        android:padding="48dp"
        android:gravity="center"
        android:textAllCaps="true"/>

</LinearLayout>
