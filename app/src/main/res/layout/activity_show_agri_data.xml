<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@android:color/black"
            android:id="@+id/header1data"
            android:text="header 1 data"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageAgri"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:text="pH Requirement"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/header2data"
            android:paddingBottom="8dp"

            android:text="header 2 data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="sowing time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:id="@+id/header3data"
            android:text="header 3 data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"

            android:textColor="@android:color/black"
            android:text="temperature range "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/header4data"
            android:paddingBottom="8dp"

            android:text="header 4 data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"

            android:textColor="@android:color/black"
            android:text="nutrients needed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingBottom="8dp"

            android:id="@+id/header5data"
            android:text="header 5 data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"

            android:textColor="@android:color/black"
            android:text="best soil type"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/header6data"
            android:text="header 6 data"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>